<UserControl x:Class="Shop.Management.Views.Products.Toolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="300">
    <Grid>
        <StackPanel Style="{StaticResource ToolbarStyle}">
            <Button x:Name="Refresh">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Shop.Management;component/images/refresh_76.png" />
                    <TextBlock Text="Refresh" Foreground="White" VerticalAlignment="Center" Margin="5,0,0,0" />
                </StackPanel>
            </Button>
            <Button x:Name="New" Content="New" />
            <Button x:Name="ReceiptSelectedProduct" Content="Receipt" Visibility="{Binding ItemCommandVisibility}" />
            <Button x:Name="AdjustSelectedProduct" Content="Adjustment" Visibility="{Binding ItemCommandVisibility}" />
            <Button x:Name="EditSelectedProduct" Content="Edit" Visibility="{Binding ItemCommandVisibility}" />
        </StackPanel>
    </Grid>
</UserControl>
