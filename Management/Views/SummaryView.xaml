             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Margin="10,10,10,0">
            <TextBlock Style="{StaticResource H2}" Text="Sales" />
            <TextBlock Style="{StaticResource H3}" Text="Today: TODO" />
            <TextBlock Style="{StaticResource H3}" Text="This week: TODO" />
            <TextBlock Style="{StaticResource H3}" Text="Last week: TODO" />
            <TextBlock Style="{StaticResource H2}" Text="Customers" Margin="0,10,0,0" />
            <TextBlock Style="{StaticResource H3}" Text="Balance total: TODO" />
        </StackPanel>
    </Grid>
</UserControl>
