<Window x:Class="Shop.PointOfSale.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:b="clr-namespace:Shop.PointOfSale.Behaviors"
        Title="ShellView" Height="760" Width="1358" WindowStartupLocation="CenterScreen"
        Background="#FFF0F0F0">
    <i:Interaction.Behaviors>
        <b:FullScreenBehaviour />
    </i:Interaction.Behaviors>
    
    <Grid>
        <ContentControl x:Name="ActiveItem" />
        <ContentControl x:Name="DialogItem" Focusable="False" />
    </Grid>
</Window>
